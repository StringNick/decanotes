{
    "designSystem": {
      "appName": "DecaNotes",
      "typography": {
        "primary": {
          "fontFamily": "Albert Sans",
          "weights": ["regular", "medium", "semibold", "bold"],
          "specimens": "Aa Bb Cc Dd Ee Ff Gg Hh Ii Jj Kk Ll Mm Nn Oo Pp Qq Rr Ss Tt Uu Vv Ww Xx Yy Zz 0123456789"
        },
        "hierarchy": {
          "appTitle": {
            "fontSize": "28px",
            "fontWeight": "bold",
            "color": "#FFFFFF",
            "context": "Onboarding screens, app headers"
          },
          "sectionHeaders": {
            "fontSize": "20px",
            "fontWeight": "semibold",
            "color": "#000000",
            "context": "Card titles, section headers"
          },
          "bodyText": {
            "fontSize": "16px",
            "fontWeight": "regular",
            "color": "#000000",
            "context": "Todo items, descriptions"
          },
          "metadata": {
            "fontSize": "14px",
            "fontWeight": "regular",
            "color": "#666666",
            "context": "Dates, counts, secondary info"
          },
          "labels": {
            "fontSize": "12px",
            "fontWeight": "medium",
            "color": "#666666",
            "context": "Category tags, small labels"
          }
        }
      },
      "colorPalette": {
        "primary": {
          "purple": "#bd44ff",
          "teal": "#0bcdb6",
          "blue": "#67d4fc",
          "dark": "#313131"
        },
        "gradients": {
          "onboardingBackground": {
            "type": "linear",
            "angle": "135deg",
            "stops": [
              {"color": "#bd44ff", "position": "0%"},
              {"color": "#67d4fc", "position": "100%"}
            ],
            "context": "Onboarding screen backgrounds only"
          },
          "cardAccents": {
            "type": "linear",
            "angle": "45deg",
            "stops": [
              {"color": "#0bcdb6", "position": "0%"},
              {"color": "#67d4fc", "position": "100%"}
            ],
            "context": "Decorative elements, card highlights"
          }
        },
        "semantic": {
          "background": "#FFFFFF",
          "surface": "#F8F9FA",
          "border": "#E5E5E7",
          "textPrimary": "#000000",
          "textSecondary": "#666666",
          "textTertiary": "#999999",
          "success": "#34C759",
          "error": "#FF3B30"
        }
      },
      "elementStyling": {
        "screens": {
          "onboarding": {
            "background": "linear-gradient(135deg, #bd44ff 0%, #67d4fc 100%)",
            "content": {
              "heroIllustration": {
                "background": "#FFFFFF",
                "border": "none",
                "shadow": "0 8px 32px rgba(189, 68, 255, 0.3)"
              },
              "textBlock": {
                "background": "rgba(103, 212, 252, 0.9)",
                "borderRadius": "16px",
                "padding": "24px",
                "text": "#000000"
              }
            }
          },
          "main": {
            "background": "#FFFFFF",
            "statusBar": {
              "style": "dark-content",
              "background": "transparent"
            }
          }
        },
        "navigation": {
          "tabBar": {
            "background": "#313131",
            "borderRadius": "24px",
            "shadow": "0 4px 20px rgba(0, 0, 0, 0.1)",
            "position": "floating",
            "icons": {
              "inactive": "#FFFFFF",
              "active": "#0bcdb6",
              "background": "transparent"
            }
          },
          "filterTabs": {
            "container": {
              "background": "transparent",
              "spacing": "12px"
            },
            "active": {
              "background": "#313131",
              "text": "#FFFFFF",
              "borderRadius": "20px",
              "padding": "8px 16px"
            },
            "inactive": {
              "background": "#F0F0F0",
              "text": "#666666",
              "borderRadius": "20px",
              "padding": "8px 16px"
            }
          }
        },
        "cards": {
          "todoCard": {
            "background": "#67d4fc",
            "borderRadius": "16px",
            "padding": "20px",
            "shadow": "0 2px 12px rgba(103, 212, 252, 0.2)",
            "border": "none",
            "header": {
              "title": {
                "color": "#000000",
                "fontSize": "18px",
                "fontWeight": "semibold"
              },
              "subtitle": {
                "color": "#000000",
                "fontSize": "14px",
                "opacity": "0.7"
              },
              "actionButton": {
                "background": "#313131",
                "borderRadius": "50%",
                "size": "32px",
                "icon": "#FFFFFF"
              }
            },
            "content": {
              "todoItems": {
                "background": "#FFFFFF",
                "borderRadius": "12px",
                "padding": "12px 16px",
                "margin": "8px 0",
                "checkboxChecked": {
                  "background": "#0bcdb6",
                  "border": "none",
                  "checkmark": "#FFFFFF"
                },
                "checkboxUnchecked": {
                  "background": "#FFFFFF",
                  "border": "2px solid #E5E5E7"
                },
                "text": {
                  "color": "#000000",
                  "fontSize": "16px"
                }
              }
            }
          },
          "contentCard": {
            "background": "#FFFFFF",
            "borderRadius": "12px",
            "padding": "16px",
            "shadow": "0 1px 6px rgba(0, 0, 0, 0.1)",
            "border": "1px solid #F0F0F0",
            "image": {
              "borderRadius": "8px",
              "aspectRatio": "1:1"
            },
            "title": {
              "color": "#000000",
              "fontSize": "14px",
              "fontWeight": "semibold"
            },
            "description": {
              "color": "#666666",
              "fontSize": "12px",
              "lineHeight": "1.4"
            }
          },
          "lockedCard": {
            "background": "#F8F9FA",
            "borderRadius": "12px",
            "padding": "16px",
            "border": "1px solid #E5E5E7",
            "icon": {
              "color": "#CCCCCC",
              "size": "24px"
            },
            "text": {
              "color": "#999999",
              "fontSize": "14px"
            }
          }
        },
        "buttons": {
          "primary": {
            "background": "#313131",
            "borderRadius": "12px",
            "padding": "16px 24px",
            "text": {
              "color": "#FFFFFF",
              "fontSize": "16px",
              "fontWeight": "semibold"
            },
            "shadow": "0 2px 8px rgba(49, 49, 49, 0.2)",
            "hover": {
              "background": "#1a1a1a",
              "transform": "translateY(-1px)"
            },
            "active": {
              "background": "#0a0a0a",
              "transform": "translateY(0)"
            }
          },
          "floating": {
            "background": "#0bcdb6",
            "borderRadius": "50%",
            "size": "56px",
            "shadow": "0 4px 16px rgba(11, 205, 182, 0.3)",
            "icon": {
              "color": "#FFFFFF",
              "size": "24px"
            },
            "hover": {
              "background": "#09b4a3",
              "transform": "scale(1.05)"
            }
          }
        },
        "textFormatting": {
          "toolbar": {
            "background": "#313131",
            "borderRadius": "12px",
            "padding": "12px",
            "shadow": "0 4px 20px rgba(0, 0, 0, 0.15)",
            "colorPalette": {
              "colors": ["#FFFFFF", "#67d4fc", "#bd44ff", "#0bcdb6", "rainbow"],
              "selectedIndicator": {
                "border": "2px solid #FFFFFF",
                "borderRadius": "50%"
              }
            },
            "formatButtons": {
              "inactive": {
                "color": "#FFFFFF",
                "opacity": "0.6"
              },
              "active": {
                "color": "#FFFFFF",
                "opacity": "1.0",
                "background": "rgba(255, 255, 255, 0.1)"
              }
            }
          }
        },
        "inputs": {
          "searchBar": {
            "background": "#F8F9FA",
            "borderRadius": "12px",
            "padding": "12px 16px",
            "border": "none",
            "placeholder": {
              "color": "#999999"
            },
            "icon": {
              "color": "#666666",
              "position": "right"
            }
          }
        },
        "illustrations": {
          "geometric": {
            "style": "minimal line art",
            "colors": ["#313131", "#FFFFFF"],
            "strokeWidth": "2px",
            "fills": "minimal, mostly outlines"
          }
        }
      },
      "layoutPrinciples": {
        "spacing": {
          "containerPadding": "20px",
          "cardSpacing": "16px",
          "elementSpacing": "8px",
          "sectionSpacing": "24px"
        },
        "borderRadius": {
          "small": "8px",
          "medium": "12px",
          "large": "16px",
          "pill": "20px",
          "circle": "50%"
        },
        "shadows": {
          "subtle": "0 1px 6px rgba(0, 0, 0, 0.1)",
          "medium": "0 2px 12px rgba(0, 0, 0, 0.15)",
          "prominent": "0 4px 20px rgba(0, 0, 0, 0.2)",
          "colored": "0 4px 16px rgba([primary-color], 0.3)"
        }
      },
      "interactionStates": {
        "hover": {
          "transform": "translateY(-1px) OR scale(1.05)",
          "transition": "all 0.2s ease",
          "shadowIncrease": "multiply existing shadow by 1.5"
        },
        "active": {
          "transform": "translateY(0) OR scale(0.98)",
          "transition": "all 0.1s ease"
        },
        "focus": {
          "outline": "2px solid #0bcdb6",
          "outlineOffset": "2px"
        },
        "disabled": {
          "opacity": "0.5",
          "cursor": "not-allowed",
          "removeHoverEffects": true
        }
      },
      "applicationRules": {
        "DO_APPLY": {
          "gradients": ["onboarding backgrounds", "decorative accent elements"],
          "shadows": ["cards", "floating buttons", "toolbars", "modals"],
          "borderRadius": ["all interactive elements", "cards", "images"],
          "coloredBackgrounds": ["feature cards", "todo items", "accent elements"]
        },
        "DO_NOT_APPLY": {
          "gradients": ["text elements", "icons", "borders", "small UI components"],
          "cardStyling": ["icons", "text", "small buttons"],
          "heavyShadows": ["text", "icons", "inline elements"],
          "brightColors": ["body text", "borders", "disabled states"]
        }
      },
      "componentStates": {
        "todoItem": {
          "unchecked": {
            "checkbox": {
              "background": "#FFFFFF",
              "border": "2px solid #E5E5E7"
            },
            "text": {
              "color": "#000000",
              "textDecoration": "none"
            }
          },
          "checked": {
            "checkbox": {
              "background": "#0bcdb6",
              "border": "none",
              "icon": "#FFFFFF"
            },
            "text": {
              "color": "#666666",
              "textDecoration": "line-through"
            }
          }
        },
        "card": {
          "default": {
            "transform": "none",
            "shadow": "base shadow"
          },
          "hover": {
            "transform": "translateY(-2px)",
            "shadow": "enhanced shadow",
            "transition": "all 0.2s ease"
          },
          "pressed": {
            "transform": "translateY(0)",
            "shadow": "reduced shadow"
          }
        }
      },
      "designTokens": {
        "animation": {
          "easeInOut": "cubic-bezier(0.4, 0, 0.2, 1)",
          "spring": "cubic-bezier(0.68, -0.55, 0.265, 1.55)",
          "duration": {
            "fast": "150ms",
            "medium": "250ms",
            "slow": "400ms"
          }
        },
        "breakpoints": {
          "mobile": "375px",
          "tablet": "768px",
          "desktop": "1024px"
        }
      }
    }
  }